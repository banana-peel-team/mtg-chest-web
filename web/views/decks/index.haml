.row
  .col-10
    %nav{'aria-label': 'breadcrumb'}
      %ol.breadcrumb
        %li.breadcrumb-item.active Decks
  .col
    %ul.nav.justify-content-end
      %li
        %a.nav-link.btn.btn-light{href: '/decks/new'}
          %i.fas.fa-plus{title: 'Add deck'}

%table.table.table-hover
  %tr
    %th Name
    %th Created
    %th Actions
  - decks.each do |deck|
    %tr
      %td
        %a{href: "/decks/#{deck[:id]}"}
          = deck[:name]
          - count_badge(deck[:card_count])
      %td= deck[:created_at]
      %td
        - delete_form(action: "/decks/#{deck[:id]}") do
          - delete_button
